<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.boardserver.mapper.CommentMapper">

  <insert id="register" parameterType="com.example.boardserver.dto.CommentDTO">
    INSERT INTO comment(post_id,
                        contents,
                        subcomment_id)
    VALUES (#{postId},
            #{contents},
            #{subCommentId})
  </insert>

  <update id="updateComments" parameterType="com.example.boardserver.dto.CommentDTO">
    UPDATE comment
    SET contents      = #{contents},
        subcomment_id = #{subCommentId}
    WHERE id = #{id}
  </update>

  <delete id="deletePostComment">
    DELETE
    FROM comment
    WHERE id = #{commentId}
  </delete>
</mapper>